<%= form_for(@company) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :contact %>
  <%= f.text_field :contact %>

  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>
<br/>
<br/>
<% @offices.each do |office| %>
	<%= form_for(office) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :longitude %>
    <%= f.text_field :longitude %>

    <%= f.label :latitude %>
    <%= f.text_field :latitude %>
    <%= f.submit "Save", class: "btn btn-large btn-primary" %>
  <% end %>
  <%= link_to "delete", office, method: :delete, data: { confirm: "You sure?" }, title: office.name %>
  <br/>
 <% end %>

