<%= @user.email %>
<%= @user.name %>
<%= @user.division %>
<%= @user.role %>

<% if User.checkin?(@user) %>
  <%= form_tag('/checkout', :method => 'post', :name => "check_out_form") do %>
	  <%= text_field_tag(:latitude) %>
	  <%= text_field_tag(:longitude) %>
	  <%= submit_tag "checkout", class: "btn btn-large btn-primary" %>
  <% end %>
  <%= form_tag('/checkout', :method => 'post', :name => "check_out_form") do %>
	  <%= text_field_tag(:access_token) %>
	  <%= text_field_tag(:latitude) %>
	  <%= text_field_tag(:longitude) %>
	  <%= submit_tag "checkout", class: "btn btn-large btn-primary" %>
  <% end %>
<% else %>
  <%= form_tag('/checkin', :method => 'post', :name => "check_in_form") do %>
	  <%= text_field_tag(:latitude) %>
	  <%= text_field_tag(:longitude) %>
	  <%= submit_tag "checkin", class: "btn btn-large btn-primary" %>
  <% end %>
  <%= form_tag('/checkin', :method => 'post', :name => "check_in_form") do %>
	  <%= text_field_tag(:access_token) %>
	  <%= text_field_tag(:latitude) %>
	  <%= text_field_tag(:longitude) %>
	  <%= submit_tag "checkin", class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>
<%= form_tag('/mobile_graph', :method => 'post', :name => "mobile_graph_form") do %>
  <%= text_field_tag(:access_token) %>
  <%= text_field_tag(:from) %>
  <%= text_field_tag(:to) %>
  <%= submit_tag "mobile_graph", class: "btn btn-large btn-primary" %>
<% end %>
