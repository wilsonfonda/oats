
<!-- /users/:id -->

<div class="row">
	<div class="span8">
		<div class="row">
			<strong><h1>
				<% if @user.role == "0" %>
	                Admin
	              <% elsif @user.role == "1"%>
	                Owner
	              <% else %>
	                Employee
	              <% end %> 
	              Profile</h1></strong>
		</div>
		<div class="row floating-paper">
			<dl class="dl-horizontal">
			    <dt>Name</dt>
			    <dd><%= @user.name %></dd>
			    <dt>Email</dt>
			    <dd><%= @user.email %></dd>
			    <dt>Company</dt>
			    <dd><%= Company.find(@user.company_id).name %></dd>
			    <dt>Office</dt>
			    <dd><%= Office.find(@user.office_id).name %></dd>
			    <dt>Division</dt>
			    <dd><%= @user.division %></dd>
			    <dt>Role</dt>
			    <dd>
				  <% if @user.role == "0" %>
	                Admin
	              <% elsif @user.role == "1"%>
	                Owner
	              <% elsif @user.role == "2"%>
	                HR
	              <% elsif @user.role == "3"%>
	                Employee
	              <% end %>
          		</dd>
		    </dl>
		    
		<% if @user==current_user %>
			</div>

			<div class="row horizontal-bar"></div>

			<%= render 'checkin_form' %>
		<% else %>
			<%= link_to "Performance", worktimes_path+"?id=" + params[:id] + "&from=" + Time.now.advance(:hours => -168).strftime("%d-%m-%Y") + "&to=" + Time.now.strftime("%d-%m-%Y"), class: "btn btn-primary" %>
			</div>
		<% end%>
	</div>
	<%= render 'layouts/navigation' %>
</div>