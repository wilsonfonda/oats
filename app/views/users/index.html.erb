<% @users.each do |user| %>
<br/>
  <%if can? :update, user || user!=current_user  %>
	 <%= form_for(user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name%>

      <%= f.label :division %>
      <%= f.text_field :division %>

      <%= f.label :role %>
      <%= f.select :role, {"HR"=>"2", "Employee"=>"3"}%>

      <%= f.label :office %>
      <%= f.collection_select :office_id, Company.find(Office.find(current_user.office_id).company_id).offices, :id, :name %>

      <%= f.submit "Save", class: "btn btn-primary" %>

      <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" }, title: user.email %>
      
    <% end %>
  <% else %>
    <%=user.name%> <span/>
    <%=user.division%> <span/>
    <% if user.role == "0" %>
      Admin
    <% elsif user.role == "1"%>
      Owner
    <% elsif user.role == "2"%>
      HR
    <% elsif user.role == "3"%>
      Employee
    <% end %>
    <span/><%= Office.find(user.office_id).name %> <span/>
  <% end %>
<% end %>
<br/>

<%= form_for(User.new, :url => url_for(:controller=>'users', :action => 'add')) do |f| %>

<%= f.label :name %>
  <%= f.text_field :name%>

  <%= f.label :email %>
  <%= f.text_field :email%>

  <%= f.label :division %>
  <%= f.text_field :division %>

  <%= f.label :role %>
  <%= f.select :role, {"HR"=>"2", "Employee"=>"3"}%>

  <%= f.label :office %>
  <%= f.collection_select :office_id, Company.find(Office.find(current_user.office_id).company_id).offices, :id, :name %>

  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>

<%= form_tag('/mobile_signin', :method => 'post', :name => "mobile_signin_form") do %>
  <%= label_tag :email %><br />
  <%= email_field_tag :email %>

  <%= label_tag :password %><br />
  <%= password_field_tag :password %>

  <%= submit_tag "signin", class: "btn btn-large btn-primary" %>
<% end %>