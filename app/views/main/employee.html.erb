				</tbody>
			</table>
			<input type="button" value="Add employee" class="btn btn-primary" onclick="add_employee();"/>
			<input type="button" value="Editing mode" class="btn btn-primary pull-right shown_field" onclick="show_hidden();"/>
			<input type="button" value="Stop Editing mode" class="btn btn-primary pull-right hidden_field" onclick="hide_hidden();"/>
